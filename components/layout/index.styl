global-reset()

html
  box-sizing border-box

*
*:before
*:after
  box-sizing inherit

body
  garamond-size('s-body', true)

hr
  position relative
  height 1px
  background-color gray-lighter-color
  border none
  margin 18px 0
  clearfix()
  &.is-invisible
    background-color transparent

a
a:visited
  color black
