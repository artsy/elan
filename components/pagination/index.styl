.bordered-pagination
  margin 20px 0
  > ul
    display inline-block
    margin 0 10px
    list-style none
    border 2px solid gray-medium
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0
    > li
      display inline-block
      border-left 1px solid gray-regular
      &:first-child
        border none
      > a
        display block
        padding 8px 15px 6px
        text-decoration none
        &.is-active
          background-color gray-light
          cursor default
        > span
          color gray-semibold
