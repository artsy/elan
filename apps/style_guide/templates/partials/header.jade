- activeClass = function() { return false; }

header#main-layout-header: nav.mlh-navbar
  #main-layout-header-left.mlh-navbar-cell
    a#main-layout-header-home-logo( href='/' )
      i.icon-logo
  #main-layout-header-center.mlh-navbar-cell
    for section in sections
      a.mlh-top-nav-link(
        href="/#{section}"
        class=activeClass("/#{section}")
      )= section
